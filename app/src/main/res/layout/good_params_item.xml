<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="38dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:gravity="left|center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_left_params"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="品牌"
            android:textColor="@color/params_info_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_right_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="欧莱雅(LOREAL)"
            android:textColor="@color/top_type_text_color"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/main_bg_color"></View>
</LinearLayout>